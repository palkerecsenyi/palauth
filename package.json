{
  "name": "palauth",
  "version": "1.0.0",
  "main": "build/index.js",
  "license": "MIT",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/body-parser": "^1.19.3",
    "@types/connect-flash": "^0.0.38",
    "@types/cookie-parser": "^1.4.4",
    "@types/cookie-session": "^2.0.45",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/luxon": "^3.3.2",
    "@types/node": "^18.17.18",
    "nodemon": "^3.0.1",
    "prisma": "5.3.1",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.6.3",
  "dependencies": {
    "@prisma/client": "5.3.1",
    "argon2": "^0.31.1",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "csrf-csrf": "^3.0.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fido2-lib": "^3.4.1",
    "form-data": "^4.0.0",
    "jose": "^4.14.6",
    "luxon": "^3.4.3",
    "mailgun.js": "^9.3.0",
    "pug": "^3.0.2"
  },
  "scripts": {
    "dev": "nodemon",
    "prod": "node build/index.js",
    "start": "tsx src/index.ts",
    "build": "tsc && cp -r src/database/generated-models build/database",
    "docker:build": "docker build -t europe-west1-docker.pkg.dev/palk-util/palauth-build/palauth:latest --platform linux/amd64 .",
    "docker:push": "docker push europe-west1-docker.pkg.dev/palk-util/palauth-build/palauth",
    "gcloud:deploy": "gcloud run deploy palauth --image=europe-west1-docker.pkg.dev/palk-util/palauth-build/palauth:latest --region=europe-west1",
    "full-deploy:local": "yarn run docker:build && yarn run docker:push && yarn run gcloud:deploy",
    "full-deploy:gcp": "gcloud builds submit --region=europe-west1 --tag europe-west1-docker.pkg.dev/palk-util/palauth-build/palauth:latest && yarn run gcloud:deploy",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev"
  }
}
