generator client {
  provider = "prisma-client-js"
  output = "../src/database/generated-models"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  displayName String
  passwordHash String
}

model Invite {
  token String @id @default(uuid())
  expires DateTime?
  singleUse Boolean
}